<widgets>
    <producttab type="producttab/producttab" translate="name description" name="producttab">
        <name>ArexMage Product Tab</name>
        <description>Show Product Tab</description>
        <parameters>
			 <identifier translate="label">
                <label>Identifier</label>
                <visible>1</visible>
                <type>text</type>
				<required>1</required>
            </identifier>
           <widget_title translate="label">
                <label>Widget Title</label>
                <visible>1</visible>
                <type>text</type>
            </widget_title> 
            <widget_sub_title translate="label">
                <label>Widget Sub Title</label>
                <visible>1</visible>
                <type>text</type>
            </widget_sub_title>            
			<tab_identifier translate="label">
                <label>Choose Tab</label>
                <visible>1</visible>
                <value>1</value>
                <type>multiselect</type>
                <source_model>producttab/slide</source_model>
                <description><![CDATA[<script>
					
				</script>]]></description>
            </tab_identifier>

			 <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <values>
                    <default translate="label">
                        <value>arw/producttab/producttab.phtml</value>
                        <label>Default</label>
                    </default>
                </values>
            </template>
        </parameters>
    </producttab>
</widgets>
