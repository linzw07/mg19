<?xml version="1.0"?>
<config>
    <tabs>
        <magik translate="label" module="autocomplete">
            <label>Magik</label>
            <sort_order>100</sort_order>
        </magik>
    </tabs>
    <sections>
    <mgkautocompletesection translate="label" module="autocomplete">
        <label>Search Autocomplete</label>
        <tab>magik</tab> 
        <sort_order>200</sort_order>
        <show_in_default>1</show_in_default>
        <show_in_website>1</show_in_website>
        <show_in_store>1</show_in_store>
        <groups>
            <general translate="label">
                <label>General</label>
                <frontend_type>text</frontend_type>
                <sort_order>222</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>                   
                    <enabled translate="label" module="autocomplete">
                        <label>Enable</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                        
                    </enabled>
                    <productcount translate="label">
                        <label>Number of products to show in search result</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
		    </productcount>
                    <headercontent translate="label">
                        <label>Search result header content</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
		    </headercontent>
                    <footercontent translate="label">
                        <label>Search result footer content</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>4</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
		    </footercontent>
		    <loaderimg translate="label">
                         <label>Upload loader Image</label>
			 <frontend_type>image</frontend_type>
			 <backend_model>adminhtml/system_config_backend_image</backend_model>
			 <upload_dir config="system/filesystem/media" scope_info="1">magikautocomplete</upload_dir>
                         <base_url type="media" scope_info="1">magikautocomplete</base_url>
			 <sort_order>5</sort_order>
                         <show_in_default>1</show_in_default>
                         <show_in_website>1</show_in_website>
                         <show_in_store>1</show_in_store>
                    </loaderimg>
                    <tempcontent translate="label">
			    <label>Search result item template</label>
			    <frontend_type>textarea</frontend_type>
			    <sort_order>6</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>
		    </tempcontent>
                </fields>
            </general>           
        </groups>
    </mgkautocompletesection>
</sections>  
</config>